@model LosGrisesWeb.ProxyPersonal.PersonalDC

@{
    ViewBag.Title = "Editar Personal";
}

<h2>Editar Personal</h2>

@using (Html.BeginForm("Edit", "Personal", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.per_nom)
        @Html.TextBoxFor(model => model.per_nom, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.per_ape_pat)
        @Html.TextBoxFor(model => model.per_ape_pat, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.per_dni)
        @Html.TextBoxFor(model => model.per_dni, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.per_tel)
        @Html.TextBoxFor(model => model.per_tel, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.per_mail)
        @Html.TextBoxFor(model => model.per_mail, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.per_dir)
        @Html.TextBoxFor(model => model.per_dir, new { @class = "form-control" })
    </div>

    <div class="form-group">
        <label for="per_foto">Foto</label>
        <input type="file" name="per_foto" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
        <a href="@Url.Action("Index", "Personal")" class="btn btn-secondary">Cancelar</a>
    </div>
}
